<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    android:weightSum="1">


    <!-- Title (common!)  -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:text="FurFit"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <!-- General button -->
    <Button
        android:id="@+id/generalButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@android:color/holo_green_light"
        android:onClick="generalSwitch"
        android:text="General Button" />


    <!-- Run button -->
    <Button
        android:id="@+id/runButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@android:color/holo_red_light"
        android:onClick="runSwitch"
        android:text="Run Button" />


    <!-- Muscle button -->
    <Button
        android:id="@+id/muscleButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@android:color/holo_orange_light"
        android:onClick="muscleSwitch"
        android:text="Muscle Button" />


    <!-- Character icon -->
    <ImageView
        android:id="@+id/iv_current_character"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:onClick="charSwitch"
        android:scaleType="fitCenter"
        android:src="@drawable/char1" />


    <!-- Extras button -->
    <Button
        android:id="@+id/extrasButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@android:color/holo_purple"
        android:onClick="extrasSwitch"
        android:text="Extras Button" />

</LinearLayout>


