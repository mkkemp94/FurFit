<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:weightSum="1" >


    <!-- Title (common!)  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="FurFit"
        android:id="@+id/title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true" />


    <!-- General button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="General Button"
        android:id="@+id/generalButton"
        android:onClick="generalSwitch"
        android:background="@android:color/holo_green_light" />


    <!-- Run button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="Run Button"
        android:id="@+id/runButton"
        android:onClick="runSwitch"
        android:background="@android:color/holo_red_light" />


    <!-- Muscle button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="Muscle Button"
        android:id="@+id/muscleButton"
        android:onClick="muscleSwitch"
        android:background="@android:color/holo_orange_light" />


    <!-- Character icon -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:id="@+id/iv_current_character"
        android:src="@drawable/char1"
        android:onClick="charSwitch"
        android:scaleType="fitCenter" />


    <!-- Extras button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="Extras Button"
        android:id="@+id/extrasButton"
        android:onClick="extrasSwitch"
        android:background="@android:color/holo_purple" />

</LinearLayout>





