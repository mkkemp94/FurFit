<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.team.radical.zoomove.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zoo Move!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:textSize="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Button"
        android:id="@+id/generalButton"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:onClick="generalSwitch"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run Button"
        android:id="@+id/runButton"
        android:onClick="runSwitch"
        android:layout_below="@+id/generalButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muscle Button"
        android:id="@+id/muscleButton"
        android:onClick="muscleSwitch"
        android:layout_below="@+id/runButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extras Button"
        android:id="@+id/extrasButton"
        android:onClick="extrasSwitch"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/generalButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/char1"
        android:layout_above="@+id/extrasButton"
        android:layout_centerHorizontal="true"
        android:onClick="charSwitch" />
</RelativeLayout>
