<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_screen"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Character icon -->
        <ImageView
            android:id="@+id/iv_current_character"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="charSwitch"
            android:scaleType="fitCenter"
            android:src="@drawable/char1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- General button -->
            <Button
                android:id="@+id/generalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/general_button"
                android:onClick="generalSwitch"
                android:text="@string/general_button" />

            <!-- Run button -->
            <Button
                android:id="@+id/runButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/run_button"
                android:onClick="runSwitch"
                android:text="@string/run_button" />

            <!-- Muscle button -->
            <Button
                android:id="@+id/muscleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/muscle_button"
                android:onClick="muscleSwitch"
                android:text="@string/muscle_button" />

            <!-- Extras button -->
            <Button
                android:id="@+id/extrasButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/extras_button"
                android:onClick="extrasSwitch"
                android:text="@string/extras_button" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>